root = true

[*]
charset = utf-8
quote_type = single
end_of_line = unset
trim_trailing_whitespace = true
indent_brace_style = K&R

[*.{ts,tsx,js,jsx}]
tab_width = 2
indent_style = tab
insert_final_newline = true

[.env]
tab_width = 2
indent_style = tab
end_of_line = lf
insert_final_newline = false
